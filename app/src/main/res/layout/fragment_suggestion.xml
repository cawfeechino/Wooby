<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Suggestion">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Hello World!" />-->

    <Button
        android:id="@+id/toWatchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:elevation="0dp"
        android:text="Watch Later" />


    <Button
        android:id="@+id/watchedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:elevation="0dp"
        android:text="Watched" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_maintenance_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/genre_options"
            android:prompt="@string/genre_options_prompt"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="177dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_other_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type Other Option"
            android:inputType="textPostalAddress"
            android:paddingTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="67dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        />
</FrameLayout>